</head>
<body>
    <button onclick="topFunction()" id="myBtn" title="Go to top"><i class="fa fa-angle-up"></i></button>
    <header class="header">
        <!-- ------------------ -->
        <!-- TOP BANNER -->
        <!-- ------------------ -->
        <div class="top__bn">
            <a href="#"><img src="~/Content/img/bn_top/bn-top2.jpg" alt="December ADS" /></a>
        </div>
        <!-- ------------------ -->
        <!-- HEADER LOGO / SEARCH / SERVICE-->
        <!-- ------------------ -->
        <div class="header__nav">
            <!-- ------------------ -->
            <!-- HEADER LOGO-->
            <!-- ------------------ -->
            <div class="logo__img">
                <a href="@Url.Action("Index","Home")"><img src="~/Content/img/logo.png" width="100%" alt="HIGHWIND COMPUTER" /></a>
            </div>
            <!-- ------------------ -->
            <!-- HEADER SEARCH -->
            <!-- ------------------ -->
            <div class="search__bar">
                <form class="search__function" action="" method="GET">
                    <input type="text" placeholder="Search.." name="search" />
                    <button type="submit"><i class="fa fa-search"></i></button>
                </form>
            </div>
            <!-- ------------------ -->
            <!-- HEADER SERVICE-->
            <!-- ------------------ -->
            <nav class="customer__nav">
                <div class="nav-item">
                    <a class="nav__items" href="@Url.Action("Contact","Home")">
                        <img src="~/Content/img/nav_items/register.png" width="100%" alt="" />
                        <div class="nav__items__description">
                            <div class="items__text">Contact Us</div>
                        </div>
                    </a>
                </div>
                @if (Session["customer"] != null)
                {
                    <div class="nav-item dropdown-box">
                        <a class="nav__items" href="#">
                            <img src="~/Content/img/nav_items/login.png" width="100%" alt="" />
                            <div class="nav__items__description">
                                <div class="items__text">
                                    <div class="text__welcome">Welcome @Session["customer"]</div>                                    
                                </div>                                 
                            </div>
                        </a> 
                        <div class="dropdown-content">
                            <a class="nav__items" href="@Url.Action("PurchaseHistory", "Home")">Purchase History</a>
                            <a class="nav__items" href="@Url.Action("LogOut", "Home")">Log Out</a>
                        </div> 
                    </div>                   
                }
                else
                {
                    <div class="nav-item">
                        <a class="nav__items" href="@Url.Action("LogIn", "Home")">
                            <img src="~/Content/img/nav_items/login.png" width="100%" alt="" />
                            <div class="nav__items__description">
                                <div class="items__text">Log In</div>
                            </div>
                        </a>
                    </div>
                }
                <div class="nav-item ">
                    <a class="nav__items" href="@Url.Action("Index","Cart")">
                        <img src="~/Content/img/nav_items/shop.png" width="100%" alt="" />
                        <div class="nav__items__description">
                            <div class="items__text cart">Cart</div>
                        </div>
                    </a>                    
                </div>
            </nav>
        </div>
    </header>
    <!-- HEADER END-->
    <!-- ------------------ -->
    <!-- ------------------ -->
    <!-- HEADER NAVIGATION AND CAROUSEL START-->
    <div class="header__navigation">
        <div class="navbar__menu">
            <nav class="left__menu__navbar">
                <div class="left__nav_items">
                    @foreach (TypeProduct item in ViewBag.menu)
                    {
                        <a href="@Url.Action("Index", "Home", new { typeid = item.typeID }, null)"><img src="~/Content/images/typeproduct/@item.images" width="50px" /> @item.typeName</a> 
                    }
                </div>
            </nav>
        </div>
    </div>
    <!-- HEADER NAVIGATION END -->
    <!-- ------------------ -->
    <!-- ------------------ -->
    <!-- MAIN CONTENT START-->

    <div class="main__content">
        @RenderBody()
    </div>
    <!-- MAIN CONTENT END -->
    <!-- ------------------ -->
    <!-- ------------------ -->
