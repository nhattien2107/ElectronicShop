@model G5ElectronicShop.Models.Product

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="~/richtexteditor/rte_theme_default.css" />
<h2>Edit</h2>

@using (Html.BeginForm("Edit", "Product", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Product</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ProductID)

        <div class="form-group">
            <label class="control-label col-md-2" style="width: 140px;">Product Name</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.ProductName, new { htmlAttributes = new { @class = "form-control form-input-product" } })
                @Html.ValidationMessageFor(model => model.ProductName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" style="width: 140px;">Description</label>
            <div class="col-md-10">
                <textarea id="inp_editor1" name="Description" style="width: 850px;margin:0 auto;border-bottom: 2px solid #5fbae9;">
                </textarea>
                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" style="width: 140px;">Date Of Manufacture</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.DateOfManufacture, new { htmlAttributes = new { @class = "form-control form-input-product", type = "date" } })
                @Html.ValidationMessageFor(model => model.DateOfManufacture, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" style="width: 140px;">Type ID</label>
            <div class="col-md-10">
                @Html.DropDownList("TypeSelected", (IEnumerable<SelectListItem>)ViewBag.typename, "Select Type Name", htmlAttributes: new { @class = "form-control form-input-product" })
                @Html.ValidationMessageFor(model => model.TypeID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" style="width: 140px;">Manufacturer Name</label>
            <div class="col-md-10">
                @Html.DropDownList("ManuSelected", (IEnumerable<SelectListItem>)ViewBag.manuname, "Select Manufacturer Name", htmlAttributes: new { @class = "form-control form-input-product" })
                @Html.ValidationMessageFor(model => model.ManufacturerID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" style="width: 140px;">Price</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Price, new { htmlAttributes = new { @class = "form-control form-input-product" } })
                @Html.ValidationMessageFor(model => model.Price, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" style="width: 140px;">Image</label>
            <div class="col-md-10">
                <img src="~/Content/images/product/@Session["Images"].ToString()" width="50%" />
                <input type="file" name="ImageUpload" id="ImageUpload" class="form-control form-input-product" />
                @Html.ValidationMessageFor(model => model.Images, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

<script type="text/javascript" src="~/richtexteditor/rte.js"></script>
<script type="text/javascript" src="~/richtexteditor/plugins/all_plugins.js"></script>
<script>
    var editor1 = new RichTextEditor("#inp_editor1");
</script>