@model G5ElectronicShop.Models.TypeProduct

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Create Product Type</h2>

@using (Html.BeginForm(null, null, FormMethod.Post, new { enctype = "multipart/form-data" })) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>TypeProduct</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })      
        
        <div class="form-group">
            <label class="control-label col-md-2" style="width: 140px;">Type ID</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.typeID, new { htmlAttributes = new { @class = "form-control form-input-product" } })
                @Html.ValidationMessageFor(model => model.typeID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" style="width: 140px;">Type Name</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.typeName, new { htmlAttributes = new { @class = "form-control form-input-product" } })
                @Html.ValidationMessageFor(model => model.typeName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" style="width: 140px;">Image</label>
            <div class="col-md-10">
                <input type="file" name="imageUpload" id="imageUpload" class = "form-control form-input-product" />
                @Html.ValidationMessageFor(model => model.images, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index", "TypeProduct")
</div>
