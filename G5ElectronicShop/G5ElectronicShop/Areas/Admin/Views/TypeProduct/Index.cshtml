@model IEnumerable<G5ElectronicShop.Models.TypeProduct>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>List of Type Product</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<h4>@TempData["msg"]</h4>
@using (Html.BeginForm())
{
    <p>
        <strong>Find by Name:</strong><input type="text" name="searchString" id="searchString" style="width: 30%;" />
        <input type="submit" value="Search" />
    </p>
}
<table style="width: 50%;">
    <tr>
        <th style="width: 70px;">
            Product Type ID
        </th>
        <th>
            Product Type Name
        </th>
        <th>
            Images
        </th>
        <th style="text-align: center;">Edit</th>
        <th style="text-align: center;">Detail</th>
        <th style="text-align: center;">Delete</th>
    </tr>
    @if (Model == null)
    {
        <tr>
            <td>
                No product is found!
            </td>
        </tr>
    }
    else
    {
        foreach (var item in Model)
        {
            <tr>
                <td style="text-align: center;">
                    @Html.DisplayFor(modelItem => item.typeID)
                </td>
                <td style="text-align: left;">
                    @Html.DisplayFor(modelItem => item.typeName)
                </td>
                <td>
                    <img src="~/Content/images/typeproduct/@item.images" width="50px" />
                </td>
                <td style="text-align: center;">
                    @Html.ActionLink("Edit", "Edit", new { id = item.typeID })
                </td>
                <td style="text-align: center;">
                    @Html.ActionLink("Details", "Details", new { id = item.typeID })
                </td>
                <td style="text-align: center;">
                    @Html.ActionLink("Delete", "Delete", new { id = item.typeID })
                </td>
            </tr>
        }
    }
</table>