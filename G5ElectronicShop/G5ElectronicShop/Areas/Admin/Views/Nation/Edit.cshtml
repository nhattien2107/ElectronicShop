@model G5ElectronicShop.Models.Nation

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Edit Nation</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Nation</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.nationID)

        <div class="form-group">
            <label class="control-label col-md-2" style="width: 140px;">Nation Name</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.nationName, new { htmlAttributes = new { @class = "form-control form-input-product" } })
                @Html.ValidationMessageFor(model => model.nationName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

