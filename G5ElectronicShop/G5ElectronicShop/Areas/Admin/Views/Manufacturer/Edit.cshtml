@model G5ElectronicShop.Models.Manufacturer

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

@using (Html.BeginForm("Edit","Manufacturer",FormMethod.Post))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Manufacturer</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.manufacturerID)

        <div class="form-group">
            <label class="control-label col-md-2" style="width: 160px;">Manufacturer Name</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.manufacturerName, new { htmlAttributes = new { @class = "form-control form-input-product" } })
                @Html.ValidationMessageFor(model => model.manufacturerName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" style="width: 140px; text-align: left;">Nation Name</label>
            <div class="col-md-10">
                @Html.DropDownList("Selected", (IEnumerable<SelectListItem>)ViewBag.nations, htmlAttributes: new { @class = "form-control form-input-product" })
                @Html.ValidationMessageFor(model => model.nationID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
